<ul class="books-index">
  <% @bookmarks.each do |bookmark| %>
    <li>
      <div class="bookcard">
        <div class="bookimg">
          <span></span>
        </div>
        <div class="bookinfo">
          <p class="bookinfo__title"><%= bookmark.book.title %></p>
          <p class="bookinfo__author"><%= bookmark.book.author %></p>
          <p class="bookinfo__publisher"><%= bookmark.book.publisher %></p>
          <div class="bookinfo__buttons">
            <button>+ Log</button>
            <button>Delete</button>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
